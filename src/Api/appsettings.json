{
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/api-.log",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "Jwt": {
    "Issuer": "Shop.Api",
    "Audience": "Shop.Api.Client",
    "Key": ""
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=shop_db;Username=user;Password=password",
    "Redis": "localhost:6379,abortConnect=false"
  },
  "AllowedHosts": "*"
}
